{
  "name": "elevator-code-challenge",
  "version": "1.0.0",
  "description": "elevator code challenge typescript solution",
  "repository": "https://github.com/chrischenyc/elevator-code-challenge",
  "author": "Chris Chen (chris@capturedlabs.com)",
  "license": "MIT",
  "scripts": {
    "test": "jest --runInBand --forceExit --detectOpenHandles",
    "test:scenarios": "jest --runInBand src/__test__/scenarios.spec.ts"
  },
  "private": true,
  "dependencies": {
    "shortid": "^2.2.15",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-plugin-nestjs": "^1.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "eslint-plugin-simple-import-sort": "^5.0.2",
    "husky": "^4.2.5",
    "lint-staged": "^10.0.0",
    "prettier": "^1.18.2",
    "typescript": "^3.2.4",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.0",
    "@types/shortid": "^0.0.29",
    "jest": "^25.3.0",
    "ts-jest": "^25.4.0",
    "wait-for-expect": "^3.0.2"
  },
  "lint-staged": {
    "*.{js}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "rootDir": "src",
    "moduleNameMapper": {
      "@modules/(.*)$": "<rootDir>/modules/$1",
      "@utils/(.*)$": "<rootDir>/utils/$1"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage"
  }
}
