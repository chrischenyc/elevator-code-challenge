{
  "name": "elevator-code-challenge-engine",
  "version": "1.0.0",
  "description": "elevator code challenge typescript solution - core module with tests",
  "repository": "https://github.com/chrischenyc/elevator-code-challenge",
  "author": "Chris Chen (chris@capturedlabs.com)",
  "license": "MIT",
  "scripts": {
    "test": "jest --runInBand --forceExit --detectOpenHandles",
    "test:scenarios": "jest --runInBand src/__test__/scenarios.spec.ts",
    "test:watch": "jest --runInBand --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "shortid": "^2.2.15",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.0",
    "@types/shortid": "^0.0.29",
    "@types/uuid": "^7.0.2",
    "jest": "^25.3.0",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3",
    "wait-for-expect": "^3.0.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "rootDir": "src",
    "moduleNameMapper": {
      "@modules/(.*)$": "<rootDir>/modules/$1",
      "@utils/(.*)$": "<rootDir>/utils/$1"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage"
  }
}
