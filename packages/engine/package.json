{
  "name": "engine",
  "version": "1.0.0",
  "description": "core algorithm, client-agnostic",
  "author": "Chris Chen (chris@capturelabs.com)",
  "license": "MIT",
  "scripts": {
    "test": "jest --runInBand --forceExit --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "uuid": "^7.0.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.0",
    "@types/uuid": "^7.0.2",
    "jest": "^25.3.0",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "rootDir": "src",
    "moduleNameMapper": {
      "@modules/(.*)$": "<rootDir>/modules/$1",
      "@utils/(.*)$": "<rootDir>/utils/$1"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage"
  }
}
