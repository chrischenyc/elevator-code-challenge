{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2017",
    "sourceMap": true,
    "baseUrl": "src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@utils/*": ["utils/*"]
    },
    "outDir": "dist",
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
